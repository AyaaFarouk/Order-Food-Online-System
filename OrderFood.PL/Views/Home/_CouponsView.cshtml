@model List<OrderFood.DAL.Entities.Models.Coupon>

@if (Model != null && Model.Any())
{
    <div class="mt-3">
        <div id="couponCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-inner">
                @foreach (var coupon in Model)
                {
                    var isActive = coupon == Model.First() ? "active" : "";
                    <div class="carousel-item @isActive">
                        <div class="mask d-flex align-items-center px-5"
                             style="background: url('@Url.Content(coupon.Image)') no-repeat center center; background-size: cover; min-height: 400px;">

                            <div class="container">
                                <div class="row align-items-center">
                                    <div class="col-md-7 col-12 order-md-1 order-2 text-white">
                                        <h4 class="fs-1 mb-3 lh-1 fw-bold letter-spacing-1">
                                            Upto @coupon.AmountPercentage% Off
                                        </h4>
                                        <h2 class="text-white">
                                            Code: @coupon.Code <br />
                                            Valid until: @coupon.ExpireDate.ToString("dd MMM yyyy")
                                        </h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Carousel Controls -->
            <a class="carousel-control-prev rounded-circle" href="#couponCarousel" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </a>
            <a class="carousel-control-next rounded-circle" href="#couponCarousel" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </a>
        </div>
    </div>
}
else
{
    <p class="text-center text-muted mt-5">No coupons available at the moment.</p>
}
