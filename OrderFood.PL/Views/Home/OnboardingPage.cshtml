<div class=" bg-light p-0">
    <!-- Spinner Start -->
    <div id="spinner"
         class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border" style="width: 3rem; height: 3rem; color: #FFC107;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    <!-- Spinner End -->
    <div id="Coupons"></div>

    <!-- Menu Start -->
    <div id="popularMealsContainer">
        <div class="text-center">
            <div class="spinner-border" style="color: #FFC107;" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>
    <!-- Menu End -->
    <!-- About Start -->
    <section class="container-xxl py-5">
        <div class="container">
            <div class="row g-5 align-items-center">
                <div class="col-lg-6">
                    <div class="row g-3">
                        <div class="col-6 text-start">
                            <img class="img-fluid rounded w-100 wow zoomIn" data-wow-delay="0.1s"
                                 src="~/images/OnboardingImage/about-1.jpg" />
                        </div>
                        <div class="col-6 text-start">
                            <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.3s"
                                 src="~/images/OnboardingImage/about-2.jpg" style="margin-top: 25%" />
                        </div>
                        <div class="col-6 text-end">
                            <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.5s"
                                 src="~/images/OnboardingImage/about-3.jpg" />
                        </div>
                        <div class="col-6 text-end">
                            <img class="img-fluid rounded w-100 wow zoomIn" data-wow-delay="0.7s"
                                 src="~/images/OnboardingImage/about-4.jpg" />
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <h5 class="section-title ff-secondary text-start fw-normal" style="color:#FFC107;">
                        About Us
                    </h5>
                    <h1 class="mb-4">
                        Welcome to
                        <i class="fa fa-utensils me-2" style="color:#FFC107;"></i>Restoran
                    </h1>
                    <p class="mb-4">
                        Founded in 2009, Restoran has become a go-to destination for food lovers in the city. We serve freshly prepared meals using high-quality ingredients sourced locally and internationally.
                    </p>
                    <p class="mb-4">
                        Whether you're craving a hearty breakfast, a savory lunch, or a sweet treat, our diverse menu has something for everyone. Our chefs are passionate about delivering both flavor and presentation in every dish.
                    </p>
                    <div class="row g-4 mb-4">
                        <div class="col-sm-6">
                            <div class="d-flex align-items-center border-start border-5 px-3" style="border-color: #FFC107 !important;">
                                <h1 class="flex-shrink-0 display-5 mb-0" style="color:#FFC107;" data-toggle="counter-up">
                                    15
                                </h1>
                                <div class="ps-4">
                                    <p class="mb-0">Years of</p>
                                    <h6 class="text-uppercase mb-0">Experience</h6>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="d-flex align-items-center border-start border-5 px-3" style="border-color: #FFC107 !important;">
                                <h1 class="flex-shrink-0 display-5 mb-0" style="color:#FFC107;" data-toggle="counter-up">
                                    50
                                </h1>
                                <div class="ps-4">
                                    <p class="mb-0">Popular</p>
                                    <h6 class="text-uppercase mb-0">Master Chefs</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a class="btn py-3 px-5 mt-2" style="background-color:#FFC107; border:none; color:white;" href="">Read More</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Back to Top -->
    <a href="#" id="backToTop"
       class="btn btn-lg btn-lg-square fs-5 d-none back-to-top d-flex justify-content-center align-items-center position-fixed bottom-0 end-0 m-4"
       style="background-color:#FFC107; width:50px; height:50px; border-radius:50%; z-index:999;">
        <i class="bi bi-arrow-up"></i>
    </a>

</div>

@section Styles {
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&family=Pacifico&display=swap"
          rel="stylesheet" />
    <link href="~/css/onboarding/onboarding.css" rel="stylesheet" />
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
    <script src="~/js/onboarding/onboarding.js"></script>

    <script>
        const button = document.getElementById("backToTop");

        window.addEventListener("scroll", function () {
            if (window.scrollY > 200) {
                button.classList.remove("d-none");
            } else {
                button.classList.add("d-none");
            }
        });

        button.addEventListener("click", function (e) {
            e.preventDefault();
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });
    </script>


    <script>
        $(document).ready(function () {
            $("#popularMealsContainer").load("/Home/GetMostPopularMeals");
        });

        window.onload = function () {
            $("#Coupons").load("/Home/ViewValidCoupons");
            document.getElementById('spinner').style.display = 'none';
        };
    </script>
}
