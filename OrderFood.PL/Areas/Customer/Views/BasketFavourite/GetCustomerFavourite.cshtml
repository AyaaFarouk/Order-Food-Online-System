@using OrderFood.DAL.Entities.Basket
@model CustomerFavourite


<section style="background-color: #eee; min-height:100vh;">
    <div class="container py-5">
        <div class="row justify-content-center mb-3">
            <div class="row row-cols-1 row-cols-md-2 g-3">

                @foreach (var item in Model.FavouriteItems)
                {
                    <div class="col">
                        <div class="card shadow-0 border rounded-3">
                            <div class="card-body">
                                <div class="d-flex flex-column flex-lg-row align-items-stretch justify-content-between gap-3 w-100">
                                    <!-- Product Image -->
                                    <div class="col-lg-3">
                                        <div class="bg-image hover-zoom ripple rounded rounded-4 ripple-surface">
                                            <img src="@item.Image" class="w-100" />
                                            <a href="#!">
                                                <div class="hover-overlay">
                                                    <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                    <!-- Product Description -->
                                    <div class="flex-grow-1">
                                        <h5>@item.Name</h5>

                                    </div>
                                    <!-- Price & Shipping -->
                                    <div class="text-end text-lg-start">
                                        <div class="d-flex flex-column align-items-lg-start">
                                            <div class="d-flex align-items-center mb-2">
                                                <h4 class="mb-0 me-2">$@item.Price</h4>


                                                <button class="p-2 bg-danger rounded-circle border-0 text-light" onclick="deleteFavourite(@item.Id)">
                                                    <i class="bi bi-trash"></i>
                                                </button>

                                            
                                            
                                            
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Bio / Description -->
                                <div class="mt-3">
                                    <p>@item.Description</p>
                                </div>
                                <!-- Buttons -->
                            </div>
                        </div>

                    </div>
                }

            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>

        function deleteFavourite(id) {
            fetch(`/Customer/BasketFavourite/DeleteFavourite/${id}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                }
            })
            .then(res => res.ok ? res.json() : Promise.reject(res))
            .then(response => {
                if (response.success) {
                    location.reload(); // reload current page
                } else {
                    alert("Failed to delete favourite.");
                }
            })
            .catch(error => {
                console.error("AJAX error:", error);
                alert("Something went wrong.");
            });
        }
    </script>


}