@model OrderFood.DAL.Entities.Models.Review

@{
    ViewData["Title"] = "Review Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-success text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="h4 mb-0">
                            <i class="bi bi-chat-square-text me-2"></i>Review Details
                        </h2>
                        
                    </div>
                </div>

                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-4 text-center mb-3 mb-md-0">
                            <div class="bg-light p-3 rounded-2">
                                <div class="text-warning mb-2" style="font-size: 1.5rem;">
                                    @for (int i = 0; i < Model.Rate; i++)
                                    {
                                        <i class="bi bi-star-fill"></i>
                                    }
                                    @for (int i = Model.Rate; i < 5; i++)
                                    {
                                        <i class="bi bi-star"></i>
                                    }
                                </div>
                                <div class="h5">Rating</div>
                                <small class="text-muted">@Model.Rate out of 5</small>
                            </div>
                        </div>

                        <div class="col-md-8">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-calendar-date fs-4 text-primary me-3"></i>
                                <div>
                                    <h6 class="mb-0">Review Date</h6>
                                    <p class="mb-0">@Model.ReviewDate.ToString("MMMM dd, yyyy")</p>
                                </div>
                            </div>

                            <div class="d-flex align-items-center">
                                <i class="bi bi-shop fs-4 text-primary me-3"></i>
                                <div>
                                    <h6 class="mb-0">Restaurant</h6>
                                    <p class="mb-0">@Model.Restaurant?.Name</p>
                                    <small class="text-muted">@Model.Restaurant?.Address</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5 class="border-bottom pb-2 mb-3">
                            <i class="bi bi-chat-left-text me-2"></i>Comment
                        </h5>
                        <div class="p-3 bg-light rounded-2">
                            @Model.Comment
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="GetCustomerReviews" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Back to List
                        </a>
                        <div>
                            <a asp-action="EditReview" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                                <i class="bi bi-pencil me-1"></i> Edit
                            </a>
                            
                            <a asp-action="DeleteReview" asp-route-id="@Model.Id" class="btn btn-danger">
                                    <i class="bi bi-trash me-1"></i> Delete
                            </a>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 0.5rem;
            overflow: hidden;
        }

        .card-header {
            border-radius: 0 !important;
        }

        .bg-light {
            background-color: #f8f9fa !important;
        }
    </style>
}