@model OrderFood.DAL.Entities.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="h5 mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>Delete Review
                    </h2>
                </div>
                <div class="card-body">
                    <h3 class="text-center mb-4">Are you sure you want to delete this review?</h3>

                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-circle-fill me-2"></i>
                        This action cannot be undone. All review data will be permanently removed.
                    </div>

                    <div class="review-details p-4 mb-4 border rounded">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h5 class="text-muted">Customer</h5>
                                <p>@Model.Customer?.FirstName @Model.Customer?.LastName</p>
                            </div>
                            <div class="col-md-6">
                                <h5 class="text-muted">Restaurant</h5>
                                <p>@Model.Restaurant?.Name</p>
                                <small class="text-muted">@Model.Restaurant?.Address</small>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h5 class="text-muted">Date</h5>
                                <p>@Model.ReviewDate.ToString("MMMM dd, yyyy")</p>
                            </div>
                            <div class="col-md-6">
                                <h5 class="text-muted">Rating</h5>
                                <div class="text-warning">
                                    @for (int i = 0; i < Model.Rate; i++)
                                    {
                                        <i class="bi bi-star-fill"></i>
                                    }
                                    @for (int i = Model.Rate; i < 5; i++)
                                    {
                                        <i class="bi bi-star"></i>
                                    }
                                    <span class="text-muted ms-2">(@Model.Rate/5)</span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <h5 class="text-muted">Comment</h5>
                            <div class="p-3 bg-light rounded">
                                @Model.Comment
                            </div>
                        </div>
                    </div>

                    <form asp-action="DeleteReview" class="text-center">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger me-2">
                            <i class="bi bi-trash-fill me-1"></i> Confirm Delete
                        </button>
                        <a asp-action="GetCustomerReviews" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 0.5rem;
            border-width: 2px;
        }

        .review-details {
            background-color: #f8f9fa;
        }

        .text-muted {
            color: #6c757d !important;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .btn-danger {
            padding: 0.5rem 1.5rem;
        }
    </style>
}