@model List<OrderFood.PL.Areas.Admin.Models.UserRoleViewModel>
@using Microsoft.AspNetCore.Identity;
@{
    ViewData["Title"] = "Users Management";
}
 
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6" style="color:#89c155">Users Management</h1>

        <div class="btn-group" role="group">
            <a asp-area="Admin" asp-controller="Admin" asp-action="Create" class="btn btn-outline-warning">
                <i class="fas fa-user-plus"></i> Create new One
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead  id="custom" >
                        <tr>
                            @* <th>#No</th> *@
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Role</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @* <td>@Html.DisplayFor(modelItem => item.user.Id)</td> *@
                                <td>@Html.DisplayFor(modelItem => item.user.FirstName)</td>
                                <td>@Html.DisplayFor(modelItem => item.user.LastName)</td>
                                <td>@Html.DisplayFor(modelItem => item.user.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.user.Address)</td>
                                <td>
                                    <span class="badge btn btn-outline-warning text-dark">@item.role</span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Delete" asp-route-id="@item.user.Id" class="btn btn-outline-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table-hover tbody tr:hover {
            background-color: #f8f9fa;  
            transform: scale(1.01);
            transition: all 0.2s ease;
        }

        .badge {
            font-size: 0.9rem;
            padding: 0.35em 0.65em;
        }

        .table th {
            white-space: nowrap;
        }

         
    </style>
}
