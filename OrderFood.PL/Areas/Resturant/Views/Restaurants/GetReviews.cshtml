@model IEnumerable<OrderFood.DAL.Entities.Models.Review>
@inject IConfiguration Configuration;
@{
    ViewData["Title"] = "GetReviews";
}

<section class="testimonial py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5 p-2 rounded-2 bg-success text-light">What Our Clients Say</h2>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var rev in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center">
                            <img src="@($"{Configuration["BaseURL"]}{rev.Customer.Image}")"
                                 class="rounded-circle mb-3"
                                 alt="Client Avatar"
                                 style="width: 100px; height: 100px; object-fit: cover;">

                            <h5 class="card-title mb-1">@rev.Customer.FirstName</h5>
                            <p class="text-muted mb-1">Restaurant: @rev.Restaurant.Name</p>
                            <div class="text-warning">
                                @for (var i = 0; i < rev.Rate; i++)
                                {
                                    <i class="bi bi-star-fill"></i>
                                }
                            </div>
                            <p class="card-text small">@rev.Restaurant.Description</p>

                            <div class="d-flex justify-content-between align-items-center mt-3">

                                <div class="text-muted small">
                                    @rev.ReviewDate.ToShortDateString()
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>





