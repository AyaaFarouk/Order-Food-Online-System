@using OrderFood.PL.Areas.Resturant.ViewModel
@model UpdateRestaurantViewModel;

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{ 
     ViewData["Title"] = "Settings"; 
} 

<div class="container vh-100 vw-100 justify-content-center">
    <div class="d-grid row justify-content-center align-text-center text-opacity-75 mt-5">
        <h3>@Model.Name</h3>
    </div>
    <div class="container d-grid border border-5 border-warning border-opacity-25 mt-4 mb-5 p-3 h-auto w-100 shadow-lg" >
        
        <form asp-action="Settings" enctype="multipart/form-data" method="post"> 
            
            <input asp-for="@Model.Restaurant.Id" type="hidden" />
            <input asp-for="@Model.Restaurant.OwnerId" type="hidden" />


            <div class="row mb-3">
                <div class="d-flex flex-row gap-2 align-items-end">
                    <img id="logo-preview"  src="@Model.Restaurant.Logo" alt="@Model.Name" class="me-5" width="200px" height="200px" >
                    <div class="form-outline w-50">
                        <label asp-for="@Model.Restaurant.Logo" class="form-label">Logo</label>
                        <input id="logo-input" type="hidden" asp-for="@Model.Restaurant.Logo" />
                        <input type="file" name="ImageFile" asp-for="@Model.ImageFile" class="form-control" />
                    </div>
                    <button id="btn-remove-logo" type="button" class="btn btn-light">Remove</button>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6 form-group ">
                <label asp-for="@Model.Name" class="form-label">Name</label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <!-- HotLine -->
                <label asp-for="@Model.HotLine" class="form-label">HotLine</label>
                <input asp-for="@Model.HotLine" class="form-control" />
                <span asp-validation-for="HotLine" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col form-group">
                    <label asp-for="@Model.Description" class="form-label">Description</label>
                    <textarea asp-for="@Model.Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6 form-group">
                <label asp-for="@Model.Address" class="form-label">Address</label>
                <textarea asp-for="@Model.Address" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>


                </div>
                <div class="col-md-6">
                    <label class="form-label">Your Location</label>
                    <div class="form-control" rows="3">
                    <input asp-for="@Model.Long" type="hidden" />
                    <input asp-for="@Model.Lat" type="hidden" />
                        @* <iframe    *@
                        @*      src="https: //maps.googleapis.com/maps/api/staticmap?center =Jaipur&zoom =10&size =300x100&key =YOUR_API_KEY" *@
                        @*      >  *@
                        @*  </iframe> *@
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center ">
                <input type="submit" value="Save Setting" class="btn btn-warning text-white" />
            </div>
            
        </form>
       
        </div>
    </div>

@section Scripts {
    <script>
            partial name="_ValidationScriptsPartial" />
    </script>
    <script>
        document.getElementById("btn-remove-logo").addEventListener("click", function () {
                // delete the logo from the server
            // document.getElementById("logo-preview").src = "";

                // delete the logo from the input field
            // document.getElementById("logo-input").value = "";

                // delete the logo from the file input field
            const fileInput = document.querySelector("input[type='file'][name='ImageFile']");
            if (fileInput) {
                fileInput.value = "";
            }
        });
    </script>
        
}

