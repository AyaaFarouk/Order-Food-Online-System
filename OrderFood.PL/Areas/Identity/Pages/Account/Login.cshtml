@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container py-5 d-flex justify-content-center align-items-center">
    <div class="modal-content w-50 rounded-3">
        <div class="modal-header text-center">
            <h5 class="modal-title">Welcome Back, Login</h5>
        </div>
        <div class="modal-body">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>

            <!-- Local login form -->
            <form id="account" method="post">
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Email address</label>
                    <div class="input-group">
                        <input asp-for="Input.Email" type="email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com">
                        <span class="input-group-text">
                            <i class="fas fa-envelope"></i>
                        </span>
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <div class="input-group">
                        <input asp-for="Input.Password" type="password" autocomplete="current-password" class="form-control" id="passwordInput" placeholder="Enter your password">
                        <span class="input-group-text password-toggle" id="togglePassword">
                            <i class="fas fa-eye" id="togglePasswordIcon"></i>
                        </span>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>

                </div>


                <div class="form-check d-flex justify-content-between align-items-center mb-3">
                    <div>
                        <input asp-for="Input.RememberMe" class="form-check-input" id="remember" />
                        <label class="form-check-label" for="remember">Remember me</label>
                    </div>
                    <a id="forgot-password" class="text-decoration-none" asp-page="./ForgotPassword">Forgot your password?</a>
                </div>

                <button id="login-submit" type="submit" class="btn btn-login w-100 text-white">Sign In</button>
            </form>

            <!-- Divider -->
            <div class="divider text-center my-3">
                <span>or continue with</span>
            </div>

            <!-- External login form (separate) -->
            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
  

                        <div class="social-login">
                            @* <button type="submit" class="btn btn-social btn-light btn-lg d-flex align-items-center shadow-sm border rounded-pill p-0" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"> *@
                            @*     <img src="https://img.icons8.com/color/48/000000/google-logo.png" alt="Google Logo" class="me-2" width="24" height="24"> *@
                            @*     <p>Sign in with @provider.DisplayName</p> *@
                            @* </button> *@

                            <button type="submit" class="btn btn-social btn-light btn-lg d-flex align-items-center justify-content-center shadow-sm border rounded-pill px-4 py-2" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                <img src="https://img.icons8.com/color/48/000000/google-logo.png" alt="Google Logo" class="me-2" width="24" height="24">
                                <span class="">Sign in with @provider.DisplayName</span>
                            </button>

                        </div>
                    }
                </form>
            }
            else
            {
                <div class="text-center">
                    <p>
                        There are no external authentication services configured.
                    </p>
                </div>
            }

            <!-- Register & Resend Confirmation -->
            <div class="register-link text-center mt-3">
                Don't have an account?
                <a asp-page="./Register" class="text-decoration-none" asp-route-returnUrl="@Model.ReturnUrl">Register now</a>
            </div>

            <div class="text-center mt-2 bg-succes d-flex justify-content-center align-items-center gap-5">
                <a class="text-decoration-none" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                <a class="text-decoration-none" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>

            </div>
        </div>
    </div>
</div>






